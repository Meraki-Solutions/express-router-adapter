{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom",
      "es7"
    ],
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.js",
    "**/*.spec.ts",
    "**/__mocks__"
  ]
}
